root = true

[*]
indent_style = tab
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
quote_type = single
spaces_around_operators = true
tab_width = 4
insert_final_newline = true

[{*.ts, *.tsx}]
ij_typescript_imports_wrap = on_every_item
ij_typescript_spaces_within_object_type_braces = false

[*.json]
indent_style = space
indent_size = 4

