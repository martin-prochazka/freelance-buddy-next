// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id       Int    @id @default(autoincrement())
  name     String
  password String
  email    String @unique
  avatar   String
  buddyId  Int?
  buddy    Buddy? @relation(fields: [buddyId], references: [id])
}

model Skill {
  id      Int    @id @default(autoincrement())
  name    String
  buddyId Int?
  buddy   Buddy? @relation(fields: [buddyId], references: [id])
}

model Buddy {
  id     Int     @id @default(autoincrement())
  role   String
  skills Skill[]
  user   User?
}
